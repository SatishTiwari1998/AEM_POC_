<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Properties"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[core.cif.components.featuredcategorylist.v1.editor,cif.shell.picker]">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/tabs"
        size="L">
        <items jcr:primaryType="nt:unstructured">
            <tabBanner1
            jcr:primaryType="nt:unstructured"
            jcr:title="Choice Banner Fields"
            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
            <items jcr:primaryType="nt:unstructured">
                <column
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/container">
                    <items jcr:primaryType="nt:unstructured">

                        <choiceBannerTitle
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Banner Title"
                        name="./choiceBannerTitle"/>

                        <choiceBannerTextImage
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                fieldDescription="Author Icon text fields to be shown as option on Choice Banner."
                                fieldLabel="Icon-Text Fields"
                                composite="{Boolean}true">
                                <field
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container"
                                        name="./choiceBannerTextImage">
                                        <items jcr:primaryType="nt:unstructured">
                                            <categoryText
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldLabel="Text"
                                            name="./categoryText"/>

                                            <categoryIcon jcr:primaryType="nt:unstructured"
                                            sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                            allowUpload="{Boolean}false"
                                            autoStart="{Boolean}false"
                                            class="cq-droptarget"
                                            fieldLabel="Icon Image"
                                            fieldDescription="Same Image Refernce Field is used for Home Page Banner"
                                            fileNameParameter="fileName"
                                            fileReferenceParameter="./categoryIcon"
                                            mimeTypes="[image/jpeg,image/png,image/svg,image/jpg,image/gif]"
                                            multiple="{Boolean}false"
                                            name="images"
                                            title="Contact Icon"
                                            uploadUrl="${suffix.path}"
                                            useHTML5="{Boolean}true"/>
                                        </items>
                                </field>
                        </choiceBannerTextImage>

                    </items>
                </column>
            </items>
        </tabBanner1>
        </items>
    </content>
</jcr:root>
